<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- xml based Configuration -->
	<bean id="car" class="edu.igo.springlearning.Car">
		<!-- <property name="tyre" value="MRF"/> -->
		<!-- <property name="tyre" ref="ceat" /> --><!-- Normal Object dependency Injection -->
		<!-- <property name="tyre">
		<list>
		<ref bean="ceat"/>
		<ref bean="mrf"/>
		<ref bean="bridgestone"/>
		</list>
		
		</property> -->
		<property name="size" value="20" />
	</bean>

	<bean id="ceat" class="edu.igo.springlearning.Tyre">
		<property name="brand" value="CEAT" />
	</bean>
	
	<bean id="mrf" class="edu.igo.springlearning.Tyre">
	<property name="brand" value="MRF"></property>
	</bean>
	
	<bean id="bridgestone" class="edu.igo.springlearning.Tyre">
	<property name="brand" value="BRIGESTONE"></property>
	</bean>
	<bean class="edu.igo.springlearning.BeanNamePostProcessor"/>

	<bean id="bike" class="edu.igo.springlearning.Bike">
	<property name="bikeName" value="honda sp125"/>
	</bean>
	
	<!-- MessageSource for not hardcoding values in Code it is used -->
	<bean id ="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
	<property name="basenames">
	<list>
	<value>display</value>
	</list>
	</property>
	</bean>
	
	<!-- annotation based configuration -->
	<context:component-scan
		base-package="edu.igo.springlearning" />



</beans>